<%- include("../partials/header") %>
<div class="container sm-col-12">
    <div class="card row">
        <div class="card-header info-color white-text text-center">
            <h1>Edit <%=campground.name%></h1>
        </div>
        <div class="card-body">
            <form class="form" action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
                <div class="form-row">
                    <div class="form-group col-12">
                        <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
                    </div>
                    <div class="form-group col-12">
                        <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group col-12">
                        <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>">
                    </div>
                    <div class="form-group col-12">
                        <input class="form-control" type="text" name="campground[description]" value="<%=campground.description%>">
                    </div>
                    <div class="form-group col-12">
                        <button class="btn btn-lg btn-primary purple-gradient btn-block" type="submit" name="button">Submit</button>
                    </div>
                </div>
            </form>
            <a href="/campgrounds">Go Back!!</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
