<%- include("partials/header") %>

<div class="container">
  <div class="card">
    <h5 class="card-header info-color white-text text-center py-4">
      <strong>Login</strong>
    </h5>
    <div class="card-body px-lg-5 pt-0">

      <form class="text-center" style="color: #f50f6f;" action="/login" method="post">

        <div class="form-row">
          <div class="col">
            <div class="md-form">
              <input type="text" id="materialRegisterFormFirstName" name="username" class="form-control">
              <label for="materialRegisterFormFirstName">Username</label>
            </div>
          </div>

          <div class="col">
            <div class="md-form">
              <input type="password" id="materialRegisterFormPassword" name="password" class="form-control" aria-describedby="materialRegisterFormPasswordHelpBlock">
              <label for="materialRegisterFormPassword">Password</label>
            </div>
          </div>

          <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign in</button>
        </div>
        <p>New to Yelpcamp?<a type="button" class="btn btn-outline-info btn-rounded btn-sm waves-effect" href="/register">
          Signup
        </a>
        </p>
        <!-- Social register -->
        <p>or sign up with:</p>

        <a type="button" class="btn-floating btn-fb btn-sm" href="/register">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a type="button" class="btn-floating btn-tw btn-sm" href="/register">
          <i class="fab fa-twitter"></i>
        </a>
        <a type="button" class="btn-floating btn-li btn-sm" href="/register">
          <i class="fab fa-linkedin-in"></i>
        </a>
        <a type="button" class="btn-floating btn-git btn-sm" href="/register">
          <i class="fab fa-github"></i>
        </a>

        <hr>
      </form>
      <!-- Form -->
    </div>
  </div>

  <%- include("partials/footer") %>
